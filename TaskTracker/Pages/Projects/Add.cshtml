@page
@model TaskTracker.Pages.Projects.AddModel
@{
    ViewData["Title"] = "Yeni Proje Ekle";
}

<h2 class="mb-4">Yeni Proje</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Project.Title" class="form-label"></label>
        <input asp-for="Project.Title" class="form-control" />
        <span asp-validation-for="Project.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Project.Description" class="form-label">Proje Açıklaması</label>
        <textarea asp-for="Project.Description" class="form-control" rows="4" placeholder="Proje hakkında kısa açıklama yazın..."></textarea>
        <span asp-validation-for="Project.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Project.Feature" class="form-label">Proje Özellikleri</label>
        <textarea asp-for="Project.Feature" class="form-control" rows="4" placeholder="Proje özelliklerini yazın..."></textarea>
        <span asp-validation-for="Project.Feature" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Project.StartDate" class="form-label"></label>
        <input asp-for="Project.StartDate"
               type="date"
               class="form-control"
               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Project.StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Project.EndDate" class="form-label"></label>
        <input asp-for="Project.EndDate"
               type="date"
               class="form-control"
               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Project.EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-page="List" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}