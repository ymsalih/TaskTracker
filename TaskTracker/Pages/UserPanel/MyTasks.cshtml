@page
@model MyTasksModel
@{
    ViewData["Title"] = "Görevlerim";
}
@functions {
    public string TranslateStatus(string status)
    {
        return status switch
        {
            "Todo" => "Yapılacak", // eşleşen durum ve karşılığı şeklinde misal buraya taksstatus kısımlarını gönderdik eşleşen öğeyi türkçeye çevirir içinde yoksa çevirmez 
            "InProgress" => "Devam Ediyor", 
            "Done" => "Tamamlandı",
            _ => "Bilinmiyor"
        };
    }
}


<h2 class="mb-4">Görevlerim</h2>

@if (Model.MyTasks.Any())
{
    <div class="row">
        @foreach (var task in Model.MyTasks)
        {
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">

                    <!-- 🔷 Proje Başlığı -->
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@task.ProjectName</h5>
                    </div>

                    <!-- 📦 Görev Detayı -->
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Görev Bilgileri</h6>

                        <p><strong>Görev Başlığı:</strong> @task.TaskTitle</p>
                        <p><strong>Görev Detayı:</strong> @task.TaskDetail</p>
                        <p><strong>Görev Durumu:</strong> @TranslateStatus(task.TaskStatus)</p>

                       
                          

                        @if (task.DueDate.HasValue)
                        {
                            <p><strong>Teslim Tarihi:</strong> @task.DueDate.Value.ToShortDateString()</p>
                        }
                        else
                        {
                            <p><strong>Teslim Tarihi:</strong> Belirlenmemiş</p>
                        }
                    </div>

                    <!-- 🏗️ Proje Detayı -->
                    <div class="card-footer bg-light">
                        <h6 class="text-muted mb-2">Proje Bilgileri</h6>
                        <p><strong>Proje Açıklaması:</strong> @task.ProjectDescription</p>
                        <p><strong>Proje Özellikleri:</strong> @task.ProjectFeature</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">Size atanmış görev bulunmamaktadır.</div>
}