@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("UserType");
    var userId = Context.Session.GetInt32("UserId");
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] İŞ - Görev Yönetimi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- 🔧 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- Sol: Marka -->
            <div>
                <a class="navbar-brand" asp-page="/Index">Görev Yönetim</a>
            </div>

            <!-- Orta: Hoş geldiniz mesajı (sadece "Kullanıcı" rolü için) -->
            <div class="flex-grow-1 text-center">
                @if (role == "Kullanıcı")
                {
                    <span class="navbar-text fw-bold fs-5 text-light">
                        Hoş geldiniz!
                    </span>
                }
            </div>

            <!-- Sağ: Menü ve çıkış -->
            <div>
                <ul class="navbar-nav d-flex flex-row gap-2">
                    @if (role == "Yönetici")
                    {
                        <li class="nav-item"><a class="nav-link text-light" asp-page="/Users/List">Kullanıcılar</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-page="/Users/Add">Yeni Kullanıcı</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-page="/Projects/List">Projeler</a></li>
                        <li class="nav-item"><a class="nav-link text-light" asp-page="/Tasks/List">Görevler</a></li>
                    }
                    @if (role != null)
                    {
                        <li class="nav-item">
                            <a asp-page="/Auth/Logout" class="btn btn-outline-light">Çıkış Yap</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>

    <!-- 🖥️ Sayfa gövdesi -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <footer class="text-center text-muted mt-5 mb-3">
        © 2025 Görev Yönetimi | Tüm hakları saklıdır
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>